<resources>

    <!-- 全屏幕拉伸 -->
    <style name="layout_full">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <!-- 包裹自身大小 -->
    <style name="layout_wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!-- 横向分布 -->
    <style name="layout_horizontal" parent="layout_full">
        <item name="android:layout_width">0dip</item>
    </style>
    <!-- 纵向分布 -->
    <style name="layout_vertical" parent="layout_full">
        <item name="android:layout_height">0dip</item>
    </style>

    <style name="titlebar_leftTexte">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/padding_left_border</item>
        <item name="android:paddingRight">@dimen/padding_right_border</item>
        <item name="android:background">@drawable/seletor_titlebar_back_bg</item>
        <item name="android:textColor">@color/color_ffffff</item>
        <item name="android:textSize">@dimen/text_mid2_size</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="titlebar_leftImg">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentLeft">true</item>
        <!-- <item name="android:drawableLeft">@drawable/titlebar_back</item> -->
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/padding_left_border</item>
        <item name="android:paddingRight">@dimen/padding_right_border</item>
        <item name="android:background">@drawable/seletor_titlebar_back_bg</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="titlebar_rightText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/padding_left_border</item>
        <item name="android:paddingRight">@dimen/padding_right_border</item>
        <item name="android:background">@drawable/seletor_titlebar_back_bg</item>
        <item name="android:textColor">@color/color_ffffff</item>
        <item name="android:textSize">@dimen/text_mid2_size</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="titlebar_rightImg">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentRight">true</item>
        <!-- <item name="android:drawableRight">@drawable/titlebar_back</item> -->
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/padding_left_border</item>
        <item name="android:paddingRight">@dimen/padding_right_border</item>
        <item name="android:background">@drawable/seletor_titlebar_back_bg</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="h_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@color/color_ff5400</item>
    </style>

    <style name="v_divider">
        <item name="android:layout_width">2dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/color_ff5400</item>
    </style>

    <!-- 2单选按钮风格 -->
    <style name="radioBtn2">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">@dimen/margin_top_border</item>
        <item name="android:layout_marginBottom">@dimen/margin_bottom_border</item>
        <item name="android:button">@null</item>
        <item name="android:padding">2dp</item>
        <item name="android:textColor">@color/seletor_orange_white_color</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_mid2_size</item>
    </style>

    <!-- 新增跟进弹出框样式 -->
    <style name="dialog_follow_up_new" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@color/color_translucent</item>
        <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
    </style>

    <style name="dialog_datetime_picker" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item> <!-- 边框 -->
        <item name="android:windowIsFloating">true</item> <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item> <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item> <!-- 无标题 -->
        <item name="android:windowBackground">@color/color_translucent</item> <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">true</item> <!-- 模糊 -->
    </style>

    <!-- loading加载进度框的样式 -->
    <style name="dialog_loading" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item> <!-- 边框 -->
        <item name="android:windowIsFloating">true</item> <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item> <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item> <!-- 无标题 -->
        <item name="android:windowBackground">@color/color_translucent</item> <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">false</item> <!-- 模糊 -->
    </style>

    <!-- Recovery -->
    <style name="RecoveryTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/recoveryColorPrimary</item>
        <item name="colorPrimaryDark">@color/recoveryColorPrimaryDark</item>
        <item name="colorAccent">@color/recoveryColorAccent</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="RecoveryTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="RecoveryTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="RecoveryTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>
