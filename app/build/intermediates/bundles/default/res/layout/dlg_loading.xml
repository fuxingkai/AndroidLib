<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_radius_dialog_black_bg"
    android:orientation="vertical"
    android:padding="20dp" >

    <LinearLayout
        android:id="@+id/loadingDlg_ll_content"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:orientation="vertical" 
        android:gravity="center">

        <ImageView
            android:id="@+id/loadingDlg_iv_loading"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="center_horizontal"            
            android:src="@drawable/loading_icon_white" />

        <TextView
            android:id="@+id/loadingDlg_tv_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="6dp"
            android:text="@string/common_waiting"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>